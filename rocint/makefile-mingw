# makefile for module rocint with MinWG

MOUNTPOINT=..
OUTDIR=..\winbin
GENDIR=..\wingen
TMPOUTDIR=$(GENDIR)\rocs\bin
DEBUG=-g
AR=ar
LIBS=-liphlpapi -lmpr -lwsock32 -ladvapi32

CPP=gcc
LNK=gcc
INCL_PATH=$(MOUNTPOINT)

CC_FLAGS=-c $(DEBUG) -I$(INCL_PATH) -I$(GENDIR)

all:
	cd $(GENDIR)\rocint & ..\..\rocs\bin\ogen.exe ..\..\rocint\rocint.xml

clean:
	-mkdir $(OUTDIR)
	-mkdir $(GENDIR)\rocint
	cd $(GENDIR)\rocint & ..\..\rocs\bin\ogen.exe ..\..\rocint\rocint.xml

